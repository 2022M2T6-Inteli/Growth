
    <div class="container">
        <div class="row">
            <div class="col-3" id="left">
                <div class="row">
                    <aside class="aside-nav"> <!-- Aside com navegação entre os módulos de edição de usuário -->
                        <div class="form-group">
                            <img src="/imagens/Avatar.svg" alt="Logo">
                            <br>
                            <h1><%= usuario.name %></h1>
                        </div>
                        <nav>
                            <ul>
                                <li>
                                    <a href="/usuario/empresa">
                                        <button type="button" id="btn" class="btn btn-outline-success">Dados da
                                            Empresa</button>
                                    </a>
                                    
                                </li>
                                <li class="active">
                                    <a href="/usuario/dono">
                                        <button type="button" id="btn" class="btn btn-success">Dados do Dono</button>
                                    </a>
                                </li>
                                <li>
                                    <a href="/usuario/contador">
                                        <button type="button" id="btn" class="btn btn-outline-success">Dados do Contador</button>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </aside>
                </div>
            </div>
            <div class="col-9">
                <div class="row" id="right-top">
                    <h1>Dados do Dono</h1>
                </div>
                <div class="row" id="right-down">
                    <div class="edit-card">
                        <form class="edit-card-form" method="post" action="/usuario/dono">
                            <div class="form-group" id="input">
                                <label for="exampleInputEmail1">Nome do Dono</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" value="<%= usuario.owner_name %>" name="owner_name">
                            </div>
                            <div class="form-group" id="input">
                                <label for="exampleInputPassword1">CPF do Dono</label>
                                <input type="text" class="form-control" id="exampleInputPassword1"
                                value="<%= usuario.owner_cpf %>" name="owner_cpf">
                            </div>
                            <div class="form-group" id="input">
                                <label for="exampleInputEmail1">Telefone do Dono</label>
                                <input type="text" class="form-control" id="exampleInputEmail1"
                                value="<%= usuario.owner_cellphone %>" name="owner_cellphone">
                            </div>
                            <button type="submit" id="btn-save" class="btn btn-success">Salvar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>