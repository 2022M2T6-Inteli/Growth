<div class="container">
    <div class="row">
        <div class="col-3" id="left">
            <div class="row">
                <aside class="aside-nav"> <!-- Aside com navegação entre os módulos de edição de usuário -->
                    <div class="form-group">
                        <img src="/imagens/Avatar.svg" alt="Logo">
                        <br>
                        <h1><%= usuario.name %></h1>
                    </div>
                    <nav>
                        <ul>
                            <li class="active">
                                <a href="/usuario/empresa">
                                    <button type="button" id="btn" class="btn btn-success">Dados da
                                        Empresa</button>
                                </a>

                            </li>
                            <li>
                                <a href="/usuario/dono">
                                    <button type="button" id="btn" class="btn btn-outline-success">Dados do
                                        Dono</button>
                                </a>
                            </li>
                            <li>
                                <a href="/usuario/contador">
                                    <button type="button" id="btn" class="btn btn-outline-success">Dados do
                                        Contador</button>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
            </div>
        </div>
        <div class="col-9">
            <div class="row" id="right-top">
                <h1>Dados da Empresa</h1>
            </div>
            <div class="row" id="right-down">
                <div class="edit-card">
                    <form class="edit-card-form" method="post" action="">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Razão Social</label>
                            <input type="text" class="form-control" value="<%= usuario.name %>" name="name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">CNPJ</label>
                            <input type="text" class="form-control" id="exampleInputPassword1"
                                value="<%= usuario.cnpj %>" name="cnpj">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Número de Funcionários</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                value="<%= usuario.employees_number %>" name="employees_number">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Telefone</label>
                            <input type="text" class="form-control" id="exampleInputPassword1"
                                value="<%= usuario.cellphone %>" name="cellphone">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">E-mail</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" value="<%= usuario.email %>"
                                name="email">
                        </div>
                        <button type="submit" id="btn-save" class="btn btn-success">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>