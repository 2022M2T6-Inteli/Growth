<div class="card mb-5" style="width: 450px; border-radius: 20px; margin-top: 20px; margin-left: 25px; margin-right: 25px;">
    <div class="card-body">
        <h4 class="card-title mb-0"><%= name %></h4>
        <% if(locals.city_name) {%>
            <h6 class="local"><%= locals.city_name %> - <%= state_name %></h6>
        <% } else { %>
            <h6 class="local">Cidade nÃ£o registrada</h6>
        <% } %>
        <div class="d-flex w-100 justify-content-start" style="max-height: 200px; overflow-y:auto;">
            <% if(locals.ObraTags) { %>
                <% ObraTags.map(tag => { %>
                    <span class="btn btn-primary mr-2"
                    style="background-color: #FF8B22; border-color: #FF8B22; font-size: x-small; margin: 0px 5px;"
                    type="submit"><%= tag.name %></span>
                <% }) %>
            <% } %>
        </div>
        <p class="card-text" style="text-align: start;"><%= description %></p>
        <a href="/obra/<%= id %>" class="btn btn-primary"
            style="background: linear-gradient(to right, #006B3F, #079D56); border: #006B3F;">Saiba
            Mais</a>
    </div>
</div>