<!DOCTYPE html>
<html lang="pt-br">

<head>
    <!-- Head com imports Boostrap, css e js -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | ADM
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="/dashboard/Componentes/Page.css" rel="stylesheet">
    <link href="<%= css %>" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>


<body>
    <div class="container-fluid">
        <div class="row">
            <aside class="col-2 aside-nav">
                <!-- Aside com navegação entre as principais páginas do dashboard  -->
                <img src="https://logodownload.org/wp-content/uploads/2018/07/mrv-logo-1-1.png" alt="">
                <nav>
                    <ul>
                        <li class="<%= currentPage.includes('home') || currentPage == '/' ? 'active' : ''  %>">
                            <a href="/dashboard/">
                                <i class="bi bi-house"></i>
                                <span>Inicio</span>
                            </a>
                        </li>
                        <li class="<%= currentPage.includes('obras') ? 'active' : ''  %>">
                            <a href="/dashboard/obras">
                                <i class="bi bi-building"></i>
                                <span>Obras</span>
                            </a>
                        </li>
                        <li class="<%= currentPage.includes('usuarios') ? 'active' : ''  %>">
                            <a href="/dashboard/usuarios">
                                <i class="bi bi-people"></i>
                                <span>Usuários</span>
                            </a>
                        </li>
                        <li class="<%= currentPage.includes('administradores') ? 'active' : ''  %>">
                            <a href="/dashboard/administradores">
                                <i class="bi bi-people"></i>
                                <span>Adms</span>
                            </a>
                        </li>
                        <li class="<%= currentPage.includes('tags') ? 'active' : ''  %>">
                            <a href="/dashboard/tags">
                                <i class="bi bi-tag"></i>
                                <span>Tags</span>
                            </a>
                        </li>
                        <li class="">
                            <a href="/home">
                                <i class="bi bi-box-arrow-left"></i>
                                <span>Sair</span>
                            </a>
                        </li>
                    </ul>

                </nav>
            </aside>
            <%- include(conteudo) %>
                <%- secondAside ? include(secondAside) : null %>


                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                        crossorigin="anonymous">
                        </script>
        </div>
    </div>
    <script>
    var usuarios = document.getElementById('usuarios-cadastrados').value;
    var obras = document.getElementById('obras-cadastradas').value;
    let chart1 = document.getElementById('chart1');

    new Chart(chart1, {
        type: 'bar',
        data: {
            labels: ['Relação Empreiteiros X Obras'],
            datasets: [{
                label: 'Empreiteiros',
                data: [usuarios],
                borderWidth: 1,
                backgroundColor: ["#006B3F", "#079D56", "#00D38D", "#82EA5B", "#FF8B22", "#FFB719", "#793F98", "#AC41D8", "#F7287C", "#FF5AAD", "#FFF028",]
            },
            {
                label: 'Obras',
                data: [obras],
                borderWidth: 1,
                backgroundColor: ["#079D56", "#00D38D", "#82EA5B", "#FF8B22", "#FFB719", "#793F98", "#AC41D8", "#F7287C", "#FF5AAD", "#FFF028",]
            }]
            
        }
        
    });

    </script>
</body>

</html>