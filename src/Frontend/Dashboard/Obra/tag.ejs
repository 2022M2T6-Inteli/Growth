<main class="col-8">
    <link rel="stylesheet" href="/dashboard/Obra/tag.css"></link>
    <div class="row">
        <div class="col-12"><h1>Tags da Obra <%= obra.name %></h1></div>
    </div>
    <h2>Tags selecionadas</h2>
    <div class="div-tags">
        <% tagsEscolhidas.map(tag => { %>
            <a href="/dashboard/obras/<%=obra.id%>/tags/<%= tag.id%>"><%= tag.name %></a>
        <% }) %>
    </div>
    <h2>Tags disponíveis para seleção</h2>
    <div class="div-tags">
        <% tagsNaoSelecionadas.map(tag => { %>
            <a href="/dashboard/obras/<%=obra.id%>/tags/<%= tag.id%>"><%= tag.name %></a>
        <% }) %>
    </div>
</main>